<Window
    x:Class="FufuLauncher.Views.AchievementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FufuLauncher.Models"
    mc:Ignorable="d"
    Title="成就追踪">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.Resources>
            <FontFamily x:Key="AppGlobalFont">/Assets/zh-cn-l.ttf#SDK_SC_Web</FontFamily>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="32" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <Image Source="/Assets/WindowIcon.ico" Width="16" Height="16" Margin="0,0,12,0" />
                <TextBlock Text="成就追踪" 
                           Style="{StaticResource CaptionTextBlockStyle}" 
                           FontFamily="{StaticResource AppGlobalFont}" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" 
                  BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
                  BorderThickness="0,0,1,0" 
                  Background="{ThemeResource LayerFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <TextBlock Text="成就分类" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontFamily="{StaticResource AppGlobalFont}" 
                           Margin="20,24,20,16"/>

                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                          SelectionChanged="OnCategorySelectionChanged"
                          Padding="12,0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollMode="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:AchievementCategory">
                            <Grid Padding="12,12" CornerRadius="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Image Source="https://act-upload.mihoyo.com/wiki-user-upload/2024/10/14/76362111/27ec1c00c5bb06745e16039a10ff3aaa_2149228895435655987.png"
                                           Width="20" Height="20" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" 
                                               Text="{x:Bind Name}" 
                                               Style="{StaticResource BodyStrongTextBlockStyle}" 
                                               FontFamily="{StaticResource AppGlobalFont}" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{x:Bind ProgressDisplay, Mode=OneWay}" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               FontFamily="{StaticResource AppGlobalFont}" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"/>
                                </Grid>
                                <ProgressBar Grid.Row="1" Minimum="0" Height="3"
                                             Maximum="{x:Bind TotalCount, Mode=OneWay}"
                                             Value="{x:Bind CompletedCount, Mode=OneWay}"
                                             Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                             Foreground="{ThemeResource SystemAccentColor}"
                                             HorizontalAlignment="Stretch"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Grid.Row="2" 
                        Padding="16" 
                        BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
                        BorderThickness="0,1,0,0">
                    <Button Content="导入脚本" 
                            Click="ToggleImportPanel" 
                            HorizontalAlignment="Center"
                            Style="{StaticResource AccentButtonStyle}" 
                            FontFamily="{StaticResource AppGlobalFont}"
                            Width="200"/> 
                </Border>
            </Grid>

            <Grid Grid.Column="1" Padding="24,24,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,20">
                    <TextBlock Text="{x:Bind ViewModel.SelectedCategory.Name, Mode=OneWay, FallbackValue='请选择分类'}" 
                               Style="{StaticResource TitleTextBlockStyle}"
                               FontFamily="{StaticResource AppGlobalFont}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="16" Height="16"/>
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   FontFamily="{StaticResource AppGlobalFont}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <ListView Grid.Row="1" 
                          ItemsSource="{x:Bind ViewModel.CurrentAchievements, Mode=OneWay}"
                          SelectionMode="None"
                          Padding="0,0,16,24">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,0,0,12"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:AchievementItem">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                    BorderThickness="1" CornerRadius="8" Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind Title}" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                                   FontFamily="{StaticResource AppGlobalFont}"
                                                   TextWrapping="Wrap"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" 
                                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                    Padding="8,4" CornerRadius="4" BorderThickness="1"
                                                    BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                                            <Image Source="https://upload-bbs.mihoyo.com/upload/2022/12/26/300350281/fb334cf8fd21e669ed6e7aa95890e2b5_2523388253479178875.png"
                                                   Height="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="{x:Bind RewardCount}" FontWeight="SemiBold" 
                                                       FontSize="12" VerticalAlignment="Center"
                                                       FontFamily="{StaticResource AppGlobalFont}"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Text="{x:Bind Description}" 
                                               TextWrapping="Wrap" Margin="0,0,0,12"
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontFamily="{StaticResource AppGlobalFont}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                                                    CornerRadius="4" Padding="6,2" 
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Version}" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                                           FontFamily="{StaticResource AppGlobalFont}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                            </Border>
                                            <HyperlinkButton Content="查看详情" 
                                                             FontSize="12"
                                                             Padding="4,0"
                                                             VerticalAlignment="Center"
                                                             FontFamily="{StaticResource AppGlobalFont}"
                                                             Click="OnViewDetailClick"/>
                                        </StackPanel>

                                        <CheckBox Grid.Column="1" Content="完成状态" MinWidth="0" Margin="0"
                                                  IsChecked="{x:Bind IsCompleted, Mode=TwoWay}" 
                                                  FontFamily="{StaticResource AppGlobalFont}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.ColumnSpan="2"
                  Visibility="{x:Bind ViewModel.IsImportPanelVisible, Mode=OneWay}"
                  Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" IsHitTestVisible="True"
                  VerticalAlignment="Top" Margin="0,0,0,0" Padding="24"
                  BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                <StackPanel Spacing="16">
                    <TextBlock Text="导入 Paimon.moe 脚本" Style="{StaticResource SubtitleTextBlockStyle}" FontFamily="{StaticResource AppGlobalFont}"/>
                    <TextBlock Text="请粘贴来自扫描工具的完整 JavaScript 代码：" Style="{StaticResource BodyTextBlockStyle}" FontFamily="{StaticResource AppGlobalFont}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <TextBox Text="{x:Bind ViewModel.ImportScriptContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True" Height="180" FontFamily="Consolas" ScrollViewer.VerticalScrollBarVisibility="Auto"
                             PlaceholderText="在此处粘贴代码 (例如: const data = ...)"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="执行并同步" Click="OnExecuteImportScript" Style="{StaticResource AccentButtonStyle}" FontFamily="{StaticResource AppGlobalFont}"/>
                        <Button Content="取消" Click="ToggleImportPanel" FontFamily="{StaticResource AppGlobalFont}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid x:Name="WebViewContainer" Opacity="0" IsHitTestVisible="False" 
                  Width="1" Height="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>