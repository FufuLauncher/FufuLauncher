<Page
    x:Class="FufuLauncher.Views.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:FufuLauncher.ViewModels"
    xmlns:views="using:FufuLauncher.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <views:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Width="50" Height="50"
                      Grid.ColumnSpan="2"
                      Canvas.ZIndex="999"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <Grid Grid.Column="0" Visibility="{x:Bind ViewModel.IsRoleMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
    
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="30"/>
                </TransitionCollection>
            </Grid.Transitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,12,16,0" Spacing="12" HorizontalAlignment="Right">
                <AutoSuggestBox x:Name="RoleSearchBox"
                                PlaceholderText="搜索角色..."
                                QueryIcon="Find"
                                Width="160"
                                TextChanged="OnRoleSearchTextChanged"/>

                <ComboBox SelectedIndex="0" SelectionChanged="OnRoleFilterChanged" Width="120">
                    <ComboBoxItem Content="全部角色"/>
                    <ComboBoxItem Content="仅看 5星"/>
                    <ComboBoxItem Content="仅看 4星"/>
                </ComboBox>
            </StackPanel>

    <GridView Grid.Row="1" 
              ItemsSource="{x:Bind ViewModel.Roles, Mode=OneWay}"
              SelectionMode="None"
              Padding="16,12,16,16"
              IsItemClickEnabled="False">
        
        <GridView.ItemContainerStyle>
            <Style TargetType="GridViewItem">
                <Setter Property="Margin" Value="6"/>
            </Style>
        </GridView.ItemContainerStyle>

        <GridView.ItemTemplate>
            <DataTemplate x:DataType="vm:RoleData">
                <Grid Width="340" 
                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                      CornerRadius="8" 
                      BorderThickness="1" 
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      Padding="16">
                      
                      <Grid.RowDefinitions>
                          <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> 
                      </Grid.RowDefinitions>
                      <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="64"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="64" Height="64" CornerRadius="32" VerticalAlignment="Top">
                                <Border.Background>
                                    <ImageBrush ImageSource="{x:Bind Avatar}" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Role}" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="{x:Bind Ename}" FontSize="12" FontStyle="Italic" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                    <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="4" Padding="4,0">
                                        <TextBlock Text="{x:Bind LevelDisplay}" FontSize="11"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{x:Bind Star}" Foreground="#FFB13B" FontWeight="Bold"/>
                                        <TextBlock Text="星" Foreground="#FFB13B"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Rectangle Grid.Row="1" Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,12"/>

                        <Grid Grid.Row="2" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="4">
                                <TextBlock Text="天赋 (TALENTS)" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock Text="{x:Bind TalentsDisplay}" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="命座分布 (C0/C1/C2)" Margin="0,6,0,0" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock Text="{x:Bind ConstellationSummary}" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="平均伤害 (AVG DMG)" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock Text="{x:Bind DamageDisplay}" FontSize="16" FontWeight="Bold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind DamageName}" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" MaxLines="2"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="3" Margin="0,12,0,0">
                            <TextBlock Text="热门武器 (TOP WEAPONS)" FontSize="10" FontWeight="Bold" Opacity="0.6" Margin="0,0,0,4"/>
                            <ItemsControl ItemsSource="{x:Bind TopWeapons}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><StackPanel Spacing="6"/></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:WeaponData">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="24" Height="24" CornerRadius="4">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{x:Bind Avatar}" Stretch="UniformToFill"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" Margin="8,0,0,0" VerticalAlignment="Center" FontSize="12"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind RateDisplay}" VerticalAlignment="Center" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Margin="0,12,0,0">
                            <TextBlock Text="热门圣遗物 (TOP ARTIFACTS)" FontSize="10" FontWeight="Bold" Opacity="0.6" Margin="0,0,0,4"/>
                            <ItemsControl ItemsSource="{x:Bind TopArtifacts}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><StackPanel Spacing="6"/></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:ArtifactSetData">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="24" Height="24" CornerRadius="12">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{x:Bind FirstIcon}" Stretch="UniformToFill"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" Margin="8,0,0,0" VerticalAlignment="Center" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind RateDisplay}" VerticalAlignment="Center" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                </Grid>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
</Grid>
        
        <Grid Grid.Column="0" Visibility="{x:Bind ViewModel.IsRerunMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
    
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="30"/>
                </TransitionCollection>
            </Grid.Transitions>
            <GridView ItemsSource="{x:Bind ViewModel.RerunRoles, Mode=OneWay}"
                      SelectionMode="None"
                      Padding="16"
                      IsItemClickEnabled="False">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="6"/>
                    </Style>
                </GridView.ItemContainerStyle>
                
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:RerunRoleData">
                        <Grid Width="380" 
                              Background="{ThemeResource LayerFillColorDefaultBrush}"
                              CornerRadius="8" 
                              BorderThickness="1" 
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              Padding="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="70" Height="70" CornerRadius="35" VerticalAlignment="Top" Margin="0,5,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="{x:Bind Avatar}" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                    <TextBlock Text="{x:Bind Role}" FontWeight="Bold" FontSize="18"/>
                                    <TextBlock Text="{x:Bind Intro}" Margin="10,2,0,0" FontSize="12" Foreground="#FF5555" VerticalAlignment="Bottom"/>
                                </StackPanel>

                                <Grid ColumnSpacing="10" RowSpacing="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="平均间隔:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind AvgDaysString}" FontSize="12"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="最短间隔:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind MinGapPool}" FontSize="12"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="历史复刻:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Top"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind HistoryString}" FontSize="12" TextWrapping="Wrap" MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        
        <Grid Visibility="{x:Bind ViewModel.IsTimelineMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel x:Name="TimelineLoadingTip"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="10"
                        Visibility="Collapsed">
                <ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="正在获取时间轴数据，请稍候..." 
                           HorizontalAlignment="Center"
                           Style="{ThemeResource SubtitleTextBlockStyle}"/>
            </StackPanel>

            <WebView2 x:Name="TimelineWebView" 
                      Opacity="0"/>
        </Grid>

        <Grid Grid.Column="0" Visibility="{x:Bind ViewModel.IsAbyssMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="30"/>
                </TransitionCollection>
            </Grid.Transitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,12,16,0" Spacing="12" HorizontalAlignment="Right">
                <ComboBox SelectedIndex="0" SelectionChanged="OnAbyssSortChanged" Width="120">
                    <ComboBoxItem Content="使用率 (↓)"/>
                    <ComboBoxItem Content="竞速耗时 (↑)"/>
                </ComboBox>
                
                <ComboBox SelectedIndex="0" SelectionChanged="OnAbyssFilterChanged" Width="120">
                    <ComboBoxItem Content="全部角色"/>
                    <ComboBoxItem Content="仅看 5星"/>
                    <ComboBoxItem Content="仅看 4星"/>
                </ComboBox>
            </StackPanel>

            <GridView Grid.Row="1" 
                      ItemsSource="{x:Bind ViewModel.AbyssRoles, Mode=OneWay}"
                      SelectionMode="None"
                      Padding="16,12,16,16"
                      IsItemClickEnabled="False">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="6"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AbyssRoleData">
                        <Grid Width="380" Height="84" 
                              Background="{ThemeResource LayerFillColorDefaultBrush}"
                              CornerRadius="8" 
                              BorderThickness="1" 
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              Padding="12,8">
                              <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    
                              </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                                <Border Width="60" Height="60" CornerRadius="30" BorderThickness="2" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{x:Bind Avatar}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <Border Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                                        VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                        CornerRadius="4" Margin="0,-6,0,0" Padding="6,1">
                                    <TextBlock Text="{x:Bind RankClass}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                </Grid>

                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
                                    <TextBlock Text="{x:Bind Name}" FontWeight="Bold" FontSize="15" Margin="0,0,8,0"/>
                                    <TextBlock Text="{x:Bind Star}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                    <TextBlock Text="星" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="使用率" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        <TextBlock Text="{x:Bind UseRateStr}" FontSize="13" FontWeight="SemiBold" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="持有率" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        <TextBlock Text="{x:Bind OwnRateStr}" FontSize="13"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="平均命座" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        <TextBlock Text="{x:Bind CollectionStr}" FontSize="13"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="平均耗时" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        <TextBlock Text="{x:Bind TimeStr}" FontSize="13"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                         </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <Grid Grid.Column="0" Visibility="{x:Bind ViewModel.IsWishMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="30"/>
                </TransitionCollection>
            </Grid.Transitions>
            
            <GridView ItemsSource="{x:Bind ViewModel.WishHistory, Mode=OneWay}"
                      SelectionMode="None"
                      Padding="16"
                      IsItemClickEnabled="False">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="8"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:WishHistoryItem">
                        <Grid Width="420" 
                              Background="{ThemeResource LayerFillColorDefaultBrush}"
                              CornerRadius="12" 
                              BorderThickness="1" 
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> 
                                <RowDefinition Height="Auto"/> 
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="12,12,0,0" Height="190"
                                    Tapped="OnWishImageTapped"
                                    ToolTipService.ToolTip="点击查看大图">
                                <Image Source="{x:Bind Avatar}" Stretch="UniformToFill" VerticalAlignment="Top"/>
                            </Border>
                            <StackPanel Grid.Row="1" Padding="16,12">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="{x:Bind Version}" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"/>
                                    <TextBlock Text="{x:Bind Time}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,0,0,6">
                                    <Border Background="#26FFB13B" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                                        <TextBlock Text="5星" Foreground="#E6951A" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind Star5Display}" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="#26D6ADFF" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                                        <TextBlock Text="4星" Foreground="#9E6ADB" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind Star4Display}" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <Grid Grid.Column="0" 
              Visibility="{x:Bind ViewModel.IsSpiralAbyssMode, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="30"/>
                </TransitionCollection>
            </Grid.Transitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GridView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SpiralAbyssRoles, Mode=OneWay}"
                      SelectionMode="None" IsItemClickEnabled="False" Padding="12">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SpiralAbyssRole">
                        <Grid Width="100" Margin="6" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                              CornerRadius="4" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                                    
                            <Border Height="100" CornerRadius="4,4,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="{x:Bind Avatar}" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                                    
                            <TextBlock Grid.Row="1" Text="{x:Bind Name}" HorizontalAlignment="Center" 
                                       FontSize="12" Margin="0,6,0,0" FontWeight="SemiBold"/>
                                    
                            <StackPanel Grid.Row="2" Margin="6,4,6,8">
                                <TextBlock Text="{x:Bind UseRateDisplay}" HorizontalAlignment="Center" 
                                           FontSize="12" Foreground="{ThemeResource SystemFillColorSuccessBrush}" FontWeight="Bold"/>
                                <ProgressBar Value="{x:Bind UseRate}" Maximum="100" Height="2" Margin="0,2,0,0" 
                                             Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

<Grid Grid.Column="1" Width="48" Margin="0,0,16,0" VerticalAlignment="Center">
    <StackPanel Background="{ThemeResource LayerFillColorDefaultBrush}" 
                HorizontalAlignment="Center"
                Orientation="Vertical"
                CornerRadius="24" 
                Spacing="12"
                Padding="0,16"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1">
        
        <Button Click="OnSwitchToRoleData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="角色数据">
            <Image Source="https://paimon.moe/images/home.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>

        <Button Click="OnSwitchToAbyssData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="幽境危战">
            <Image Source="https://paimon.moe/images/calculator.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>

        <Button Click="OnSwitchToSpiralAbyssData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="深渊螺旋">
            <Image Source="https://paimon.moe/images/todos.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>

        <Button Click="OnSwitchToWishData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="卡池数据">
            <Image Source="https://paimon.moe/images/wish.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>
        
        <Button Click="OnSwitchToRerunData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="复刻计时">
            <Image Source="https://paimon.moe/images/characters.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>
        
        <Button Click="OnSwitchToTimelineData"
                Width="44" Height="44" CornerRadius="22"
                Background="Transparent" BorderThickness="0"
                ToolTipService.ToolTip="活动时间轴">
            <Image Source="https://paimon.moe/images/timeline.png" 
                   Width="24" Height="24" Stretch="Uniform"/>
        </Button>

    </StackPanel>
    
    <Grid.Shadow>
        <ThemeShadow/>
    </Grid.Shadow>
</Grid>

    </Grid>
</Page>